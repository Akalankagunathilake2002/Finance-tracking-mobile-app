<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¼ Budget UI (Unchanged) -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/etBudgett"
            android:layout_width="374dp"
            android:layout_height="69dp"
            android:hint="@string/enter_monthly_budget"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSaveBudgett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#9C8BC34A"
            android:text="@string/save_budget" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/budget" />

    </LinearLayout>

    <!-- ðŸ”½ Bottom Navigation (Imported) -->
    <include layout="@layout/custom_bottom_nav" />
</LinearLayout>
